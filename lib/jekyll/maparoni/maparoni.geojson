{
  "type": "FeatureCollection",
  "features": [
  {%- assign posts = site[page.collection] | where_exp: "post", "post.location != nil" -%}
  {%- for post in posts %}
    {
      "geometry": {
        "coordinates": [
            {{ post.location.longitude }},
            {{ post.location.latitude }}
        ],
        "type": "Point"
      },
      "properties": {
        "name": "{{ post.title }}",
      {%- if post.location.pin-letter %}
        "maparoni-pin-letter": "{{ post.location.pin-letter }}",
      {%- endif %}
        "maparoni-note": {{ post.raw_content | jsonify }},
      }
    }{% unless forloop.last %},{% endunless %}
  {%- endfor %}
  ],
  "maparoni": {
    "name": "{{ page.label }}"
  }
}
